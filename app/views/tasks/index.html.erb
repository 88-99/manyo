<h1>タスク一覧</h1>
<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>内容</th>
      <th>ステイタス</th>
      <th>終了期限</th>
      <th>登録日</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= task.status %></td>
        <td><%= task.deadline %></td>
        <td><%= task.created_at %></td>
        <td><%= link_to '詳細を確認する', task_path(task.id) %></td>
        <td><%= link_to "編集する", edit_task_path(task.id) %></td>
        <td><%= link_to "削除する", task_path(task.id), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to '登録画面へ', new_task_path %>
<%= link_to "終了期限でソートする", tasks_path(sort_expired: "true") %>

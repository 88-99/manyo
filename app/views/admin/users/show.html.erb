<h2>【管理者用】<%= @user.name %> のページ</h2>
<h5>メールアドレス: <%= @user.email %></h5>
<table class="table table-striped">
  <thead>
    <tr>
      <th>作成者</th>
      <th>タイトル</th>
      <th>詳しい内容</th>
      <th>ステータス</th>
      <th>優先度</th>
      <th>終了期限</th>
      <th>登録日</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.user.name %></td>
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= task.status %></td>
        <td><%= task.priority %></td>
        <td><%= task.deadline %></td>
        <td><%= task.created_at %></td>
        <td><%= link_to '詳細を確認する', task_path(task.id), class: "btn btn-primary" %></td>
        <td><%= link_to "削除する", task_path(task.id), method: :delete, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "ユーザー一覧画面へ", admin_users_path, class: "btn btn-light" %>

<h1>【管理者用】ユーザー一覧</h1>
<table>
<thead>
  <tr>
    <th>ユーザーID：</th><th>ユーザーネーム：</th><th>タスク数：</th><th>admin </th>
  </tr>
</thead>
<tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td><%= user.name %></td>
      <td><%= user.tasks.size %></td>
      <td><%= user.admin %></td>
      <td><%= link_to '詳細', admin_user_path(user.id), class: "btn btn-primary" %></td>
      <td><%= link_to "ユーザー編集", edit_admin_user_path(user.id), class: "btn btn-success" %></td>
      <td><%= link_to "ユーザー削除", admin_user_path(user.id), method: :delete, class: "btn btn-danger" %></td>
    </tr>
  <% end %>
</tbody>
</table>
<%= link_to "ユーザー作成画面へ", new_admin_user_path, class: "btn btn-light" %>
